{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	-
	{{ 'category_create'|trans }}
{% endblock %}

{% block body %}
	<div class="d-flex flex-row justify-content-center mt-5">
		<img class="landscape me-5" src="{{ asset('build/images/landscape.png') }}">
		<div class="pimpedForm mx-5">
			<h1>{{ 'category_create'|trans }}</h1>

			{{ include('category/_form.html.twig') }}
		</div>
	</div>

	<div class="mb-2 fixed-bottom">
		<a href="{{ path('category_index') }}">
			<img src="{{ asset('build/images/previous.png') }}" id="returnLogo">
			{{ 'back'|trans }}
		</a>
	</div>
{% endblock %}
