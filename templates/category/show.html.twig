{% extends 'base.html.twig' %}

{% block title %}Catégorie
	{{ categoryName }}
{% endblock %}

{% block body %}
	<div class="m-0 mt-3 p-0 w-100">
		<div class="row justify-content-center">
			<div class="col-10 d-flex flex-column">
				<h2 class="purple">Séries de la catégorie
					{{categoryName}}
				</h2>
				<div class="d-flex col-10 justify-content-left align-self-center mt-3">
					{% if programs is not empty %}
						{% for program in programs %}
							{% include "program/_cardProgram.html.twig" %}
						{% endfor %}
					{% else %}
						<p>Aucune série trouvée</p>
					{% endif %}
				</div>
			</div>
		</div>
	</div>

	<div class="mb-2 fixed-bottom">
		<a href="{{ path('category_index') }}">
			<img src="{{ asset('build/images/previous.png') }}" id="returnLogo">
			Retour
		</a>
	</div>
{% endblock %}
