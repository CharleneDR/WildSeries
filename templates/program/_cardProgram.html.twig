<a class="cardLink" href="{{ path('program_show', {slug: program.slug }) }}">
	<div class="card programCard m-2 col-3">
		<img class="card-img-top" src="{{ vich_uploader_asset(program) }}" alt="{{program.title}}" height="300">
		<div class="px-3 py-2 d-flex flex-column justify-content-between align-items-stretch card-text ">
			<div class="programTitle">
				<p class="mb-1">{{ program.title }}</p>
			</div>
			<div>
				<p class="m-0">{{ program.seasons|length }}
					saisons</p>
				<p class="m-0">{{ program.year }}</p>
				<div class="d-flex flex-row justify-content-between">
					<p class="m-0">{{ program.category.name }}</p>
					<a href="{{ path('program_watchlist', {id: program.id})}}">
						<i class="bi {% if app.user and app.user.isInWatchlist(program) == true %} bi-heart-fill {% else %} bi-heart {% endif %} }}"></i>
					</a>
				</div>
			</div>
		</div>
	</a>
</div>
