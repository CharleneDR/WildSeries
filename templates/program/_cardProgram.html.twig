<a class="cardLink" href="{{ path('program_show', {slug: program.slug }) }}">
	<div class="card m-3 col-3">
		<img class="card-img-top" src="{{ program.poster }}" alt="Card image cap">
		<div class="px-3 py-2 d-flex flex-column justify-content-between d-flex align-items-stretch">
			<div class="programTitle">
				<p class="mb-1">{{ program.title }}</p>
			</div>
			<div>
				<p class="m-0">{{ program.seasons|length }}
					saisons</p>
				<p class="m-0">{{ program.year }}</p>
				<p class="m-0">{{ program.category.name }}</p>
			</div>
		</div>
	</a>
</div>
