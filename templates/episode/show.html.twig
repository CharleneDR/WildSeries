{% extends 'base.html.twig' %}

{% block title %}
	{{ 'episode'|trans }}
{% endblock %}

{% block body %}
	<h1>{{ 'episode'|trans }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ episode.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ episode.title }}</td>
			</tr>
			<tr>
				<th>Number</th>
				<td>{{ episode.number }}</td>
			</tr>
			<tr>
				<th>Synopsis</th>
				<td>{{ episode.synopsis }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_episode_edit', {'slug': episode.slug}) }}">{{ 'episode_edit'|trans }}</a>

	{{ include('episode/_delete_form.html.twig') }}
{% endblock %}
