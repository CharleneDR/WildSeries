{% extends 'base.html.twig' %}

{% block title %}
	{{ 'episode'|trans }}s
{% endblock %}

{% block body %}
	<h1>{{ 'episode_edit'|trans }}s</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Number</th>
				<th>Synopsis</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for episode in episodes %}
				<tr>
					<td>{{ episode.id }}</td>
					<td>{{ episode.title }}</td>
					<td>{{ episode.number }}</td>
					<td>{{ episode.synopsis }}</td>
					<td>
						<a href="{{ path('app_episode_show', {'slug': episode.slug}) }}">show</a>
						<a href="{{ path('app_episode_edit', {'slug': episode.slug}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">{{ 'no_episode'|trans }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_episode_new') }}">{{ 'episode_create'|trans }}</a>
{% endblock %}
