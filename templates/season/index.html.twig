{% extends 'base.html.twig' %}

{% block title %}
	{{ 'season'|trans }}
{% endblock %}

{% block body %}
	<h1>{{ 'season'|trans }}</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Number</th>
				<th>Year</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for season in seasons %}
				<tr>
					<td>{{ season.id }}</td>
					<td>{{ season.number }}</td>
					<td>{{ season.year }}</td>
					<td>{{ season.description }}</td>
					<td>
						<a href="{{ path('app_season_show', {'id': season.id}) }}">show</a>
						<a href="{{ path('app_season_edit', {'id': season.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">{{ 'seasons_none'|trans }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_season_new') }}">{{ 'season_create'|trans }}</a>
{% endblock %}
