{% extends 'base.html.twig' %}

{% block title %}
	{{ 'all_actors'|trans }}
{% endblock %}

{% block body %}
	<div class="container d-flex">
		<div class="row col-12 d-flex justify-content-center">
			<div>
				<div>
					<h2 class="purple">{{ 'all_actors'|trans }}
					</h2>
				</div>
				<ul class="d-flex flex-row justify-content-center my-4 flex-wrap">
					{% for actor in actors %}
						<li class="mx-4 wrap">
							<a href="{{ path('app_actor_show', {id: actor.id }) }}">{{actor.name}}</a>
						</li>
					{% endfor %}
				</ul>
			</div>

			<div>
				<img id="category" src="{{ asset('build/images/category3.png') }}">
			</div>
		</div>
	</div>
</div>
<div class="mb-2 fixed-bottom">
	<a href="{{ path('app_index') }}" class="m-auto">
		<img src="{{ asset('build/images/previous.png') }}" id="returnLogo">
		Retour
	</a>
</div>{% endblock %}
