{% extends 'base.html.twig' %}

{% block title %}
	{{ actor.name }}
{% endblock %}

{% block body %}
	<div class="d-flex align-items-center mx-3">
		<img class="align-self-start mr-3 rounded col-3 m-5" src="/uploads/images/actors/{{actor.picture}}" alt="{{ actor.name }} poster">
		<div class="media-body m-5">
			<h1 class="mt-0 bolder">{{ actor.name }}</h1>

			<p class="bolder mb-1 mt-4">{{ 'actor_country'|trans }}
				:</p>
			<p>{{ actor.nationality }}</p>

			<p class="mb-1 bolder">{{ 'actor_birthday'|trans }}
				:</p>
			<p>{{ actor.birthday }}</p>

			<p class="mb-1 bolder">{{ 'actor_bio'|trans }}
				:</p>
			<p>{{ actor.biography }}</p>
		</div>
	</div>

	<div class="container d-flex m-auto">
		<div class="row w-100 m-auto d-flex justify-content-center">
			<div>
				<div>
					<h2 class="purple">{{ 'actor_series'|trans }}
						{{actor.name}}
					</h2>
				</div>
			</div>
		</div>
	</div>

	<div class="container d-flex flex-column m-0 p-0 m-auto">
		<div class="row w-100 justify-content-center m-auto">
			<div class="d-flex flex-wrap justify-content-center align-self-center mt-3">
				{% if actor.programs is not empty %}
					{% for program in actor.programs %}
						{% include "program/_cardProgram.html.twig" %}
					{% endfor %}
				{% else %}
					<div class="m-auto">{{ 'series_none'|trans }}</div>
				{% endif %}
			</div>
		</div>
	</div>

	<div class="mb-2 fixed-bottom">
		<a href="{{ path('category_index') }}">
			<img src="{{ asset('build/images/previous.png') }}" id="returnLogo">
			{{ 'back'|trans }}
		</a>
	</div>
{% endblock %}
