{% extends 'base.html.twig' %}

{% block title %}
	{{ 'comment'|trans }}
{% endblock %}

{% block body %}
	<h1>{{ 'comment'|trans }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ comment.id }}</td>
			</tr>
			<tr>
				<th>Comment</th>
				<td>{{ comment.comment }}</td>
			</tr>
			<tr>
				<th>Rate</th>
				<td>{{ comment.rate }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_comment_edit', {'id': comment.id}) }}">{{ 'edit'|trans }}</a>

	{{ include('comment/_delete_form.html.twig') }}
{% endblock %}
